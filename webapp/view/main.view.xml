<mvc:View controllerName="com.sap.expenseplanning.controller.main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<List id="c4c_data" items="{path:'/',sorter:{ path:'ExpensePlan'}}" headerText="Expense Plan" growing="true" growingThreshold="4"
						growingScrollToLoad="false">
						<headerToolbar>
							<Toolbar>
								<Title text="Expense Planning" level="H2"/>
								<ToolbarSpacer/>
								<Button icon="sap-icon://refresh" press="handleRefresh"/>
							</Toolbar>
						</headerToolbar>
						<items>
							<StandardListItem title="{ExpensePlan}" description="{ExpensePlanDesc}" iconDensityAware="false" iconInset="false"/>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>